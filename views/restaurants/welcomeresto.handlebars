  <body>
            <h1 class="text-center"><strong>Bites N' Nites</strong></h1>
          
    <br>
    <br>
    <form class="form-inline">
      <div class="form-group">
        <label for="filters">Apply Filters:</label>
        <label for="enterCity">City</label>
        <select class="form-control">
          <option>Hoboken, NJ</option>
          <option>Manhatten, NYC</option>
        </select>
        <label for="enterCuisine">Cuisine</label>
          <select class="form-control">
          <option>Asian:Indian</option>
          <option>Asian:Chinese</option>
          <option>Asian:Thai</option>
          <option>Asian:Japanese</option>
          <option>Greek</option>
          <option>French</option>
        </select>
        <label for="enterPrice">Price</label>
          <select class="form-control">
          <option>$$$</option>
          <option>$$</option>
          <option>$</option>
          <option>Low to High</option>
          <option>High to Low</option>
        </select>
      </div>
      <button type="submit" class="btn btn-default">Apply Filters</button>
    </form>
      <br>
      <br>

    <div id="restaurants">
      {{#each restaurantList}}
      <ul class="list-inline" style="display:inline-block;">
      <!--div width=110 heigth=100>
        <a href={{#concat this.id}}>Hiii</a> 
      {{/concat}}-->
      <!--li>{{this.name}} <image width=90 height=90 src= {{this.image_url}} ></image></li-->
      <a href={{#concat this.id}}>Hiii</a> 
      {{/concat}}
      <li class="list-inline-item">
      <div class="row">
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail" style="display:inline-block; float:none; text-align:center;">
            <img src={{this.image_url}} style="width:100%;height:100px;background-size:cover;">
            <div class="caption">
            <p><strong>
                {{this.name}}  
            </strong>
            </p>
            </div>
          </div>
        </div> 
        </div><!--end for row class-->
      
      </li> 
      
          {{/each}}
    </ul>
    </div>   
      
  </body>

  </html>