    <label for='categories'>
           Category: 
    </label>
    {{#each restaurantCategories}}
        <p class="text-uppercase">{{this.title}}</p>
    {{/each}}
</div-->

    
<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" href="#collapse1"><strong>Categories</strong></a>
      </h4>
    </div>
    <div id="collapse1" class="panel-collapse collapse">
        {{#each restaurantCategories}}
            <div class="panel-body">
                <p class="text-uppercase">
                    {{this.title}}
                </p>
            </div>
        {{/each}}
    </div>
  </div>
</div>

<br>
<div>
    <label for='interested'>
            Finding this Intersting Come Let's Check Out Some More Details --> 
    </label>
    <a href="{{restaurantLink}}" class="btn btn-primary" role="button">Let's Go</a>
</div>
<br>
<br>

<div>
    <label for='exampleInputUsername'>
            Reviews: 
    </label>
    
    {{#each reviews}}
        <!--div width=110 heigth=90>
            <div >{{this.user_name}}</div>   
            <div>{{this.post}} </div>
        </div-->

        <dl class="dl-horizontal">
        
        <dt><div >{{this.user_name}}</div></dt>
               <dd><div>{{this.post}} {{logger}}</div></dd>
        <dd><div> {{logger}}</div></dd>
        </dl>

    {{/each}}

<br>
<br>
<div class='form-group'>
        <label for='exampleInputUsername'>
            Go ahead tell us about your Experience: 
        </label>
        <br>
<textarea class="form-control" rows="4" name="review"></textarea>
<br>
<button type="submit" class="btn btn-primary">Submit</button>

    </div>

    {{#if error }}
      <div class="form-group">
        <div class="alert alert-danger">
          {{ error }}
        </div>
      </div>
      {{/if}}

</form>

