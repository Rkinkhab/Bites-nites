<form method ='post'>

<button><a href="/logout">logout</a></button>
<div class="row">
  <div class="col-md-12 col-md-12">
    <div class="thumbnail" style="background-image: url({{restaurantImage}}); opacity:0.8; ">
        <!--img src="{{restaurantImage}}"" alt="source image"-->
        <!--img src="{{restaurantImage}}" alt="Norway" width="1000" height="300"-->
  
       <div class="caption">
        <h1 class="text-center" style="color: black; font-size: 20mm"><strong>{{restaurantName}} </strong></h1>
        <br>
        <br>
        <p style="text-align:left; color: black">
                <strong> Rating:
                    {{restaurantRating}}
                    <br>
                
                <span style="float:right; color:black;">
                        Price:  {{restaurantPrice}} 
                    </strong>
                </span>
        </p>
        <p style="text-align:left; color:black;">
                <strong>Location:  
                    <address style="color: black">
                        {{restaurantLocation}} 
                    </address>
                    
            </p>
      </div>
    </div>
  </div>
</div>
<br>

