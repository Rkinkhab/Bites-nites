<h1> Bites N Nites </h1>
<h1> Welcome Owner to add a Restaurant </h1>

<form method ='post'>
    <div class='form-group'>
        <label for='exampleInputFullname'>
            Name:
        </label>
        <input class="form-control" type="text" name="restaurantName" placeholder="Enter Restaurant Name" id="restaurantName" value="{{restaurantName}}" required>
    </div>

    <div class='form-group'>
        <label for='inputImage'>
            Image Url: 
        </label>
        <input class="form-control" type="text" name="image" placeholder="Enter Image URL" id="image" value="{{image}}" pattern="https?://.+" required>
    </div>

    <div class='form-group'>
        <label for='categories'>
            Select Categories for your Reataurant:
        </label>
        
            <select multiple class="form-control">
            <option>Asian</option>
            <option>Pattisierie</option>
            <option>French</option>
            <option>Greek</option>
            <option>Meditterian</option>
            </select>

        </div>

    <div class='form-group'>
        <label for='inputPrice'>
            Price:
        </label>
        <input class="form-control" type="text" name="price" placeholder="Enter Price" id="price" value="{{price}}" pattern="[0-9]+(\.[0-9][0-9]?)?" required>
    </div>

    <div class='form-group'>
        <label for='exampleInputLocation'>
            Location:
        </label>
        <input class="form-control" type="text" name="location" placeholder="Enter Location" id="location" value="{{location}}" required>
    </div>

    <div class='form-group'>
        <label for='exampleInputPhoneNumber'>
            Phone Number:
        </label>
        <input class="form-control" type="text" name="phoneNumber" placeholder="Enter Phone Number" id="phoneNumber" value="{{phoneNumber}}" pattern="^\d{3}[\-]\d{3}[\-]\d{4}" title = "123-456-7890" required>
    </div>

    
    <button type="submit" class="btn btn-primary">Submit</button>

    {{#if error }}
      <div class="form-group">
        <div class="alert alert-danger">
          {{ error }}
        </div>
      </div>
      {{/if}}
      
      
</form>